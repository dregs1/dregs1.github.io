<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.eagle.pluto.tv" name="[COLOR orange]Eagle[/COLOR] Pluto TV" version="1.0.0" provider-name="[COLOR red]blackeagle[/COLOR]">

    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.beautifulsoup4" version="4.9.3"/>
        <import addon="script.module.requests" version="2.25.1"/>
        <import addon="inputstream.adaptive" version="21.0.0"/>
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.addon.metadata">

        <summary lang="pt_PT">[COLOR lightblue]Canais gratuitos Pluto TV[/COLOR]</summary>

        <description lang="pt_PT">
