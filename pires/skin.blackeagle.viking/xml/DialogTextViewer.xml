				<control type="textbox" id="5">
					<left>20</left>
					<top>170</top>
					<bottom>20</bottom>
					<width>1860</width>
					<label></label>
					<font>label</font>
					<align>justify</align>
					<pagecontrol>61</pagecontrol>
				</control>
