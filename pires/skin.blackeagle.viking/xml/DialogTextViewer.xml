					<textcolor>$INFO[Skin.String(color.500)]</textcolor>
					<shadowcolor>black</shadowcolor>
				</control>
				<!--secondary title-->
				<control type="label">
					<left>45</left>
					<top>90</top>
					<width>1045</width>
					<height>50</height>
					<font>kai.secondary</font>
					<align>center</align>
					<aligny>center</aligny>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>$INFO[System.Date(DDD)], $INFO[System.Date(d)] $INFO[System.Date(mmm)] $INFO[System.Date(yyyy)], $INFO[System.Time] â€¢ $LOCALIZE[31024] $INFO[Container(5).CurrentPage]/$INFO[Container(5).NumPages]</label>
