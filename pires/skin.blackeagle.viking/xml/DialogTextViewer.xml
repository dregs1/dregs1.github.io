				<top>0</top>
				<width>1200</width>
				<height>680</height>
				<aspectratio>stretch</aspectratio>
				<texture>$INFO[Skin.CurrentTheme,special://skin/extras/backgrounds/,.jpg]</texture>
			</control>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>1200</width>
				<height>2</height>
				<texture colordiffuse="$INFO[Skin.String(color.500)]">backgrounds/white.png</texture>
